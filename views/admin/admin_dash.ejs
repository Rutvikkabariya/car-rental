    <p><b>Car : </b><s id="car"></s></p>
    <p><b>Brand : </b><s id="brand"></s></p>
    <p><b>Detail : </b><s id="detail"></s></p>
    <p><b>Model : </b><s id="model"></s></p>
    <p><b>Plat Number : </b><s id="platnumber"></s></p>
    <p><b>km/h : </b><s id="km"></s></p>
    <p><b>Price : </b><s id="price"></s></p>
</div>
<!-- model Script -->
<script>
    const carModel = (a,b,dd,c,d,e,f) => {

        document.getElementById("car").innerHTML = a;
        document.getElementById("brand").innerHTML = b;
        document.getElementById("detail").innerHTML = dd;
        document.getElementById("model").innerHTML = c;
        document.getElementById("platnumber").innerHTML = d;
        document.getElementById("km").innerHTML = e;
        document.getElementById("price").innerHTML = f;

        const bodyClassList = document.body.classList;
        if (bodyClassList.contains("open")) {
            bodyClassList.remove("open");
            bodyClassList.add("closed");
        } else {
            bodyClassList.remove("closed");
            bodyClassList.add("open");
        }
    };
</script>
