<!-- model  -->
<div class="modal-container" onclick="feedbackModel()"></div>
<div class="modal-window">
    <h2>Feedback</h2>
    <hr><br>       
    <p><b>Name : </b><s id="a"></s></p>
    <p><b>Email : </b><s id="b"></s></p>
    <p><b>Feedback : </b><br><s id="c"></s></p>
</div>
<!-- model Script -->
<script>
    const feedbackModel = (a, b, c) => {

        document.getElementById("a").innerHTML = a;
        document.getElementById("b").innerHTML = b;
        document.getElementById("c").innerHTML = c;

        const bodyClassList = document.body.classList;
        if (bodyClassList.contains("open")) {
            bodyClassList.remove("open");
            bodyClassList.add("closed");
        } else {
            bodyClassList.remove("closed");
            bodyClassList.add("open");
        }
    };
</script>